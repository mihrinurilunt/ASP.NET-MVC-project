@model IEnumerable<Dessert>

@{
    ViewData["Title"] = "List of Desserts";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>Desserts</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.DessertPhotoURL" alt="@item.Name" style="max-width: 150px" />
                        </td>
                        <td class="align-middle"> @item.Name</td>
                        <td class="align-middle">@item.Description</td>
                        <td class="align-middle">@item.Price <p>$</p></td>    
                            <td class="align-middle">
                                <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit </a> |
                                <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details </a> |
                                <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete </a>
                            </td> 
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>
